<header>
    <img src="{{cityImage}}" alt="City skyline" width="100%" height="100%">
</header>
<div class="container-row">
    <div class="left">
        <h2>About {{cityName}}</h2>
        <p>{{cityDescription}}</p>
        <h2>Things to Do</h2>
        <ul>
            {{#each cityThingsToDo}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="right">
        <h2>User Reviews</h2>
        {{#each cityUserReviews}}
        <p>"{{this}}"</p>
        {{/each}}
        <button class="button">Add Your Review</button>
    </div>
</div>
